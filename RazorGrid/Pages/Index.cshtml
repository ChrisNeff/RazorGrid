@page
@model IndexModel
@(Html
    .Grid(Model.People)
    .Build(columns =>
    {
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.SomeNumber).Titled("Count");
        columns.Add(model => model.Today).Titled("Today's Date");
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    //.Pageable()
)

